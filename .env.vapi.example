# VAPI AI Customer Service - Environment Variables
# Bu dosyayı .env.vapi olarak kopyalayın ve değerleri doldurun

# ============================================
# VAPI CONFIGURATION
# ============================================
VAPI_API_KEY=your_vapi_api_key_here
VAPI_PHONE_NUMBER_ID=your_phone_number_id_here
VAPI_ASSISTANT_ID=your_assistant_id_here (optional)

# ============================================
# TWILIO CONFIGURATION
# ============================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+127223344653

# ============================================
# OPENAI CONFIGURATION (Vapi Provider)
# ============================================
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4-turbo
# Alternative: gpt-3.5-turbo (ucuz)

# ============================================
# 11LABS CONFIGURATION (TTS - Turkish Voice)
# ============================================
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=pNInz6obpgDQGcFmaJgB
# Voice ID: Turkish Male (Adam)
# Alternative voices:
# - 21m00Tcm4TlvDq8ikWAM (Rachel - English Female)
# - EXAVITQu4vr4xnSDxMaL (Sarah - English Female)

# ============================================
# DEEPGRAM CONFIGURATION (STT - Speech to Text)
# ============================================
DEEPGRAM_API_KEY=your_deepgram_api_key_here
DEEPGRAM_MODEL=nova-2
DEEPGRAM_LANGUAGE=tr

# ============================================
# N8N WEBHOOK CONFIGURATION
# ============================================
N8N_WEBHOOK_BASE_URL=https://argusbot.duckdns.org/webhook
N8N_WEBHOOK_SECRET=your_webhook_secret_here

# Webhook Endpoints:
# - Main: ${N8N_WEBHOOK_BASE_URL}/vapi-customer-service
# - Outbound Trigger: ${N8N_WEBHOOK_BASE_URL}/vapi-trigger-outbound

# ============================================
# DATABASE CONFIGURATION (Optional)
# ============================================
# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=argus_customer_service
DB_USER=postgres
DB_PASSWORD=your_db_password_here

# ============================================
# REDIS CONFIGURATION (Optional - Rate Limiting)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# ============================================
# CRM INTEGRATION (Optional)
# ============================================
# Salesforce
SALESFORCE_API_KEY=your_salesforce_api_key_here
SALESFORCE_INSTANCE_URL=https://your-instance.salesforce.com

# HubSpot
HUBSPOT_API_KEY=your_hubspot_api_key_here

# ============================================
# LOGGING & ANALYTICS (Optional)
# ============================================
# Google Sheets
GOOGLE_SHEETS_CREDENTIALS=path/to/credentials.json
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id_here

# Airtable
AIRTABLE_API_KEY=your_airtable_api_key_here
AIRTABLE_BASE_ID=your_base_id_here

# ============================================
# APPLICATION SETTINGS
# ============================================
# Environment
NODE_ENV=production
# NODE_ENV=development

# Logging Level
LOG_LEVEL=info
# LOG_LEVEL=debug

# Max Call Duration (seconds)
MAX_CALL_DURATION=600

# Rate Limiting (calls per hour per phone number)
RATE_LIMIT_CALLS_PER_HOUR=10

# ============================================
# COMPANY INFORMATION
# ============================================
COMPANY_NAME=ARGUS
COMPANY_PHONE=+905xxxxxxxxx
COMPANY_EMAIL=info@argus.com
COMPANY_WEBSITE=www.argus.com
COMPANY_ADDRESS=İstanbul, Türkiye

# ============================================
# AI ASSISTANT SETTINGS
# ============================================
ASSISTANT_NAME=ARGUS Müşteri Hizmetleri
ASSISTANT_FIRST_MESSAGE=Merhaba, ARGUS müşteri hizmetlerine hoş geldiniz. Size nasıl yardımcı olabilirim?
ASSISTANT_END_MESSAGE=ARGUS'u aradığınız için teşekkürler, iyi günler dilerim!
ASSISTANT_LANGUAGE=tr
ASSISTANT_TEMPERATURE=0.7

# ============================================
# VOICE SETTINGS
# ============================================
VOICE_STABILITY=0.5
VOICE_SIMILARITY_BOOST=0.75
VOICE_SPEED=1.0

# ============================================
# SECURITY
# ============================================
# API Rate Limiting
API_RATE_LIMIT=100
API_RATE_WINDOW=60000

# JWT Secret (if using authentication)
JWT_SECRET=your_jwt_secret_here

# Webhook Signature Secret
WEBHOOK_SIGNATURE_SECRET=your_webhook_signature_secret_here

# ============================================
# MONITORING & ALERTS (Optional)
# ============================================
# Slack Webhook for Alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz

# Email Alerts
ALERT_EMAIL=admin@argus.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password_here

# ============================================
# COST TRACKING
# ============================================
COST_ALERT_THRESHOLD=100.00
# Alert when daily cost exceeds $100

# ============================================
# BACKUP & RECOVERY
# ============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
# Daily at 2 AM

BACKUP_DESTINATION=s3://your-bucket/backups
# or: /path/to/local/backups

# ============================================
# TESTING
# ============================================
TEST_PHONE_NUMBER=+905xxxxxxxxx
TEST_MODE=false

# ============================================
# NOTES
# ============================================
# 1. Bu dosyayı .env.vapi olarak kaydedin
# 2. Asla git'e commit etmeyin!
# 3. .gitignore'da olduğundan emin olun
# 4. Production ve development için ayrı .env dosyaları kullanın
# 5. Tüm secret'ları güvenli bir yerde saklayın (1Password, Vault, etc.)
